@model SliderInfoVM

@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <div class="image">
        <img src="~/img/@Model.SignImg" style="width:30%; height:30%" />

    </div>

    <div class="title mt-5">
        <h3> @Model.Title</h3>
    </div>

    <div class="description mt-5">
        <h3> @Model.Description</h3>
    </div>

    <div class="back mt-3">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>

    </div>
</div>

