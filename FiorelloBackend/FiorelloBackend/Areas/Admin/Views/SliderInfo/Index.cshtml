@model SliderInfoVM

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center mt-3 mb-2">Slider Info</h1>
    @if (Model is null)
    {
        <a class="btn btn-success text-white" asp-action="Create">Create</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Sign Image</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Operations</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><img src="~/img/@Model.SignImg" /></td>
                        <td style="width:300px;white-space:normal"> @Model.Title </td>
                        <td style="width: 300px; white-space: normal"> @Model.Description </td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@Model.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    }


</div>



