@model SliderInfoEditVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">

    <div class="image">
        <img src="~/img/@Model.SignImg" style="width:30%; height:30%" />
    </div>


    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Photo">Sign Image</label>
            <input asp-for="Photo" class="form-control">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="form-group">
            <label asp-for="Title">Title</label>
            <textarea style="border-color:grey;" asp-for="Title" id="Title" cols="70"></textarea>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input type="text" class="form-control" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

@section script{

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>    
        CKEDITOR.replace("Title");
    </script>
}
