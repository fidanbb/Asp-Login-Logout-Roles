
@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <h1 class="text-center mt-3 mb-3">Category Archive</h1>
   
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            
                            <form class="d-inline-block" method="post" asp-action="ExtractCategory" asp-route-id="@category.Id">
                                <button type="submit" class="btn btn-outline-danger">Extract</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>