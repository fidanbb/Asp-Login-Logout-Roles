@model List<Product>

@{
    ViewData["Title"] = "Shop Page";
}


<section id="products">
    
    <div class="container mt-5">
        <h1 class="text-center mb-2">Products</h1>
        <div class="row parent-elem" data-count="@ViewBag.count ">
            <partial name="_ProductsPartial" />

        </div>
        <div class="show-more mt-3 mb-3 d-flex justify-content-center w-100">
            <button class="btn btn-primary">Show More</button>
        </div>
        <div class="show-less mt-3 mb-3 d-flex justify-content-center w-100">
            <button class="btn btn-primary d-none">Show Less</button>
        </div>
    </div>
</section>

@section script{

    <script src="~/js/shop.js"></script>
}