
@model IEnumerable<Product>

@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@item.CategoryId" data-productId="@item.Id">
            <div class="img">
                <a href="">
                    @if (item.Images.Count != 0)
                    {
                        <img src="~/img/@item.Images.FirstOrDefault(m=>m.IsMain).Image" class="img-fluid" alt="">

                    }
                </a>
            </div>
            <div class="title mt-3">
                <h6>@item.Name</h6>
            </div>
            <div class="price">
                @*<form method="post" asp-controller="Home" asp-action="AddBasket" asp-route-id="@item.Id">

                    <button type="submit" class="btn btn-primary">Add to cart</button>
                </form>*@

                <span class="text-black-50" ><a>Add to cart</a></span>
                <span class="text-black-50">$@item.Price</span>
            </div>
        </div>
    </div>

}

